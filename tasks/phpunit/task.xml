<project name="phpcq.task.phpunit">
    <property file="${phpcq.basedir}/tasks/phpunit/default.properties"/>
    <target name="-check-phpunit.installed" unless="phpunit.installed">
        <available property="phpunit.installed" file="${phpcq.bin.phpunit}"/>
    </target>
    <target name="phpunit" depends="-check-phpunit.installed" if="${phpunit.installed}">
        <exec dir="${basedir}" executable="${phpcq.bin.phpunit}" failonerror="true" taskname="phpunit">
            <arg line="${phpunit.customflags}"/>
        </exec>
    </target>
</project>
