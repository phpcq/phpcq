<project name="phpcq.task.travis-configuration-check">
    <property file="${phpcq.basedir}/tasks/travis-configuration-check/default.properties"/>
    <target name="-travis-configuration-check.installed" unless="travis-configuration-check.installed">
        <available property="travis-configuration-check.installed" file="${phpcq.bin.check-travis-configuration}"/>
    </target>
    <target name="travis-configuration-check" depends="-travis-configuration-check.installed" if="${travis-configuration-check.installed}">
        <exec dir="${basedir}" executable="${phpcq.bin.check-travis-configuration}" failonerror="true" taskname="travis-configuration-check">
            <arg value="${basedir}"/>
            <arg line="${travis-configuration-check.customflags}"/>
        </exec>
    </target>
</project>
