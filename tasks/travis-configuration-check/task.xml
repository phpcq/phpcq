<project name="phpcq.task.travis-configuration-check">
    <import file="../macrodefs.xml" />
    <property file="${phpcq.basedir}/tasks/travis-configuration-check/default.properties"/>
    <target name="-check-travis-configuration-check.is-available" unless="phpcq.task.travis-configuration-check.bin">
        <find-file-in-path
            name="travis-configuration-check"
            property="phpcq.task.travis-configuration-check.bin"
            alternativepath="${phpcq.bin.travis-configuration-check}"
        />
    </target>
    <target name="travis-configuration-check" depends="-check-travis-configuration-check.is-available" if="phpcq.task.travis-configuration-check.bin">
        <exec dir="${basedir}" executable="${phpcq.php-cli.bin}" failonerror="true" taskname="travis-configuration-check">
            <arg value="${phpcq.task.travis-configuration-check.bin}"/>
            <arg value="${basedir}"/>
            <arg line="${travis-configuration-check.customflags}"/>
        </exec>
    </target>
</project>
