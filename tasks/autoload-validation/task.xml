<project name="phpcq.task.autoload-validation">
    <import file="../macrodefs.xml" />
    <property file="${phpcq.basedir}/tasks/autoload-validation/default.properties"/>
    <target name="-check-autoload-validation.is-available" unless="autoload-validation.installed">
        <find-file-in-path
            name="check-autoloading.php"
            property="phpcq.task.autoload-validation.bin"
            alternativepath="${phpcq.bin.autoload-validation}"
        />
    </target>
    <target name="autoload-validation" depends="-check-autoload-validation.is-available" if="phpcq.task.autoload-validation.bin">
        <script language="javascript"><![CDATA[
            project.setProperty(
                'autoload-validation.excluded.arguments',
                project.getProperty('autoload-validation.excluded')
                    .split(' ')
                    .filter(function(s) { return s.trim().length>0; })
                    .map(function(s) { return '--ignore-files=' + s.trim(); })
                    .join(' ')
            );
        ]]></script>
        <exec dir="${basedir}" executable="${phpcq.php-cli.bin}" failonerror="true" taskname="autoload-validation">
            <arg value="${phpcq.task.autoload-validation.bin}"/>
            <arg value="${basedir}"/>
            <arg line="${autoload-validation.customflags}"/>
            <arg line="${autoload-validation.excluded.arguments}"/>
        </exec>
    </target>
</project>
