<project name="phpcq.task.branch-alias-validation">
    <property file="${phpcq.basedir}/tasks/branch-alias-validation/default.properties"/>
    <target name="-check-branch-alias-validation.installed" unless="branch-alias-validation.installed">
        <available property="branch-alias-validation.installed" file="${phpcq.bin.validate-branch-alias}"/>
    </target>
    <target name="branch-alias-validation" depends="-check-branch-alias-validation.installed" if="${branch-alias-validation.installed}">
        <exec dir="${basedir}" executable="${php.binary}" failonerror="true" taskname="branch-alias-validation">
            <arg value="${phpcq.bin.validate-branch-alias}"/>
            <arg value="${basedir}"/>
        </exec>
    </target>
</project>
