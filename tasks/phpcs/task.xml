<project name="phpcq.task.phpcs">
    <import file="../macrodefs.xml" />
    <property file="${phpcq.basedir}/tasks/phpcs/default.properties"/>
    <target name="-check-phpcs.is-available" unless="phpcq.task.phpcs.bin">
        <find-file-in-path
            name="phpcs"
            property="phpcq.task.phpcs.bin"
            alternativepath="${phpcq.bin.phpcs}"
        />
    </target>
    <target name="phpcs" depends="-check-phpcs.is-available" if="phpcq.task.phpcs.bin">
        <script language="javascript"><![CDATA[
            project.setProperty(
                'phpcs.excluded.arguments',
                project.getProperty('phpcs.excluded')
                    .split(' ')
                    .filter(function(s) { return s.trim().length>0; })
                    .map(function(s) { return '--ignore=' + s.trim(); })
                    .join(' ')
            );
        ]]></script>
        <exec dir="${basedir}" executable="${phpcq.php-cli.bin}" failonerror="true" taskname="phpcs">
            <arg value="${phpcq.task.phpcs.bin}"/>
            <arg value="--standard=${phpcs.standard}"/>
            <arg line="${phpcs.customflags}"/>
            <arg line="${phpcs.excluded.arguments}"/>
            <arg line="${phpcs.src}"/>
        </exec>
    </target>
</project>
