<project name="phpcq.task.phpcpd">
    <import file="../macrodefs.xml" />
    <property file="${phpcq.basedir}/tasks/phpcpd/default.properties"/>
    <target name="-check-phpcpd.is-available" unless="phpcq.task.phpcpd.bin">
        <find-file-in-path
            name="phpcpd"
            property="phpcq.task.phpcpd.bin"
            alternativepath="${phpcq.bin.phpcpd}"
        />
    </target>
    <target name="phpcpd" depends="-check-phpcpd.is-available" if="phpcq.task.phpcpd.bin">
        <exec executable="${php.binary}" outputproperty="phpcpd.excluded.arguments">
            <arg line="-r"/>
            <arg value="
            echo ($ignored=implode(' --exclude ', array_filter(array_map('trim', explode(' ', '${phpcpd.excluded}')))))
                ? '--exclude ' . $ignored
                : '';
            "/>
        </exec>
        <exec dir="${basedir}" executable="${php.binary}" failonerror="true" taskname="phpcpd">
            <arg value="${phpcq.task.phpcpd.bin}"/>
            <arg line="${phpcpd.excluded.arguments}"/>
            <arg line="${phpcpd.src}"/>
        </exec>
    </target>
</project>
