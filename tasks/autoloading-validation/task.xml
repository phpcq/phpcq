<project name="phpcq.task.autoloading-validation">
    <property file="${phpcq.basedir}/tasks/autoloading-validation/default.properties"/>
    <target name="-check-autoloading-validation.installed" unless="autoloading-validation.installed">
        <available property="autoloading-validation.installed" file="${phpcq.bin.autoloading-validation}"/>
    </target>
    <target name="autoloading-validation" depends="-check-autoloading-validation.installed" if="${autoloading-validation.installed}">
        <exec dir="${basedir}" executable="${phpcq.bin.autoloading-validation}" failonerror="true" taskname="autoloading-validation">
            <arg line="${basedir}"/>
        </exec>
    </target>
</project>
