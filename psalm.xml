<?xml version="1.0"?>
<psalm
    errorLevel="1"
    findUnusedBaselineEntry="false"
    findUnusedCode="false"
    hideExternalErrors="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config https://getpsalm.org/schema/config"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <file name="src/Config/PhpcqConfiguration.php"/>
            <file name="src/Platform/PlatformInformation.php"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <RiskyTruthyFalsyComparison>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </RiskyTruthyFalsyComparison>
        <MissingClassConstType>
            <!-- Silence MissingClassConstType errors - we are on PHP 8.1 level so far.
            The findUnusedIssueHandlerSuppression can be removed when requiring PHP 8.2 -->
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </MissingClassConstType>
        <ClassMustBeFinal>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </ClassMustBeFinal>
    </issueHandlers>
</psalm>
